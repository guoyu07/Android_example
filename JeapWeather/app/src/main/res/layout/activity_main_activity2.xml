<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.jeap.asmcos.jeapweather.MainActivity2" tools:ignore="MergeRootFrame" >


    <ImageView
        android:id="@+id/imageBGView"
        android:layout_height="578dp"
        android:layout_width="411dp"
        android:layout_weight="1.5"
        android:scaleType="fitXY"
        android:src="@drawable/a6484698" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度"
        android:id="@+id/temp_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/abc_action_bar_stacked_max_height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beijing"
        android:id="@+id/city1"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />



</FrameLayout>
